# Server Configuration
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database Configuration (Railway provides DATABASE_URL automatically)
# DATABASE_URL=postgresql://user:password@host:port/database

# Clerk Configuration (Get from https://dashboard.clerk.com)
CLERK_PUBLISHABLE_KEY=pk_live_...
CLERK_SECRET_KEY=sk_live_...
CLERK_WEBHOOK_SECRET=whsec_...

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.com

# Optional: Redis (if using caching)
# REDIS_URL=redis://host:port

# Optional: Email (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# FROM_EMAIL=noreply@writerstree.com
# FROM_NAME=Writer's Tree
